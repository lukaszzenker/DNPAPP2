@page "/CreateStudent"
@using Blazor.Data
@using DomainLibrary
@using System.Text.Json
@using System.Text

@inject IStudentService service
@inject NavigationManager NavMgr

<h3>CreateStudent</h3>

<EditForm Model="@student" OnValidSubmit="CreateNewStudent">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        Name: <br />
        <InputText @bind-Value="student.Name" />
    </div>
    <div class="form-group">
        Programme: <br />
        <InputText @bind-Value="student.Programme" />
    </div>
    <p class="actions">
        <button class="btn btn-outline-dark" type="submit">Create</button>
    </p>
</EditForm>


@code {
    Student student = new Student();

    private async Task CreateNewStudent()
    {
        await service.CreateAsync(student);
    }
}
